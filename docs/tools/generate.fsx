// Binaries that have XML documentation (in a corresponding generated XML file)
let referenceBinaries = [ "Eventful.dll" ]
// Web site location for the generated documentation
let website = "/Eventful"

let githubLink = "http://github.com/adbrowne/Eventful"

// Specify more information about your project
let info =
  [ "project-name", "Eventful"
    "project-author", "Andrew Browne, Picnic Software"
    "project-summary", "An EventSourcing library"
    "project-github", githubLink
    "project-nuget", "http://nuget.org/packages/Eventful" ]

